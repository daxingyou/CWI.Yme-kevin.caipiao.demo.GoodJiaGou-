using System;
using Yme.Code;
using Yme.Util;

namespace Yme.Mcp.Entity.BaseManage
{
    /// <summary>
    /// 门店平台信息
    /// </summary>
	public class ShopPlatformEntity : BaseEntity
    {
        /// <summary>
		/// 授权ID
		/// </summary>
        public long AuthId { set; get; }

		/// <summary>
		/// 门店ID
		/// </summary>
		public long ShopId { set; get; }

		/// <summary>
		/// 平台ID
		/// </summary>
		public int PlatformId { set; get; }

		/// <summary>
		/// 平台名称
		/// </summary>
		public string PlatformName { set; get; }

		/// <summary>
		/// 1-外卖,2-餐饮,3-商城
		/// </summary>
		public  int BusinessType { set; get; }

		/// <summary>
		/// 授权业务:1-团购/闪惠,2-外卖
		/// </summary>
		public  int AuthBussiness { set; get; }

		/// <summary>
		/// 授权令牌
		/// </summary>
		public string AuthToken { set; get; }

		/// <summary>
		/// 令牌有效期（单位：秒）
		/// </summary>
		public long ExpiresIn { set; get; }

        /// <summary>
		/// 更新令牌
		/// </summary>
        public string RefreshToken { set; get; }

        /// <summary>
        /// 更新令牌过期时间
        /// </summary>
        public DateTime? RefreshExpireTime { set; get; }

        /// <summary>
        /// 是否KA商户,0-非KA,1-KA
        /// </summary>
        public int IsKaMerchant { set; get; }

        /// <summary>
        /// 百度KA商户授权地址
        /// </summary>
        public string KaMerchantAuthUrl { set; get; }

		/// <summary>
		/// 平台店铺Id
		/// </summary>
		public string PlatformShopId { set; get; }

		/// <summary>
		/// 平台店铺名称
		/// </summary>
		public string PlatformShopName { set; get; }

		/// <summary>
		/// 店主姓名
		/// </summary>
		public string ShopmanName { set; get; }

		/// <summary>
		/// 联系电话
		/// </summary>
		public string Mobile { set; get; }

		/// <summary>
		/// 所属城区
		/// </summary>
		public string CityArea { set; get; }

		/// <summary>
		/// 所属商圈
		/// </summary>
		public string BusinessDistrict { set; get; }

		/// <summary>
		/// 店铺地址
		/// </summary>
		public string ShopAddress { set; get; }

		/// <summary>
		/// 经营范围
		/// </summary>
		public string BusinessScope { set; get; }

        /// <summary>
        /// 门店经度
        /// </summary>
        public string Latitude { get; set; }

        /// <summary>
        /// 门店纬度
        /// </summary>
        public string Longitude { get; set; }

        /// <summary>
        /// 门店图片url
        /// </summary>
        public string PictureUrl { get; set; }

        /// <summary>
        /// 营业时间【06:00-09:00,15:30-22:00】
        /// </summary>
        public string OpenTime { get; set; }

        /// <summary>
        /// 配送费
        /// </summary>
        public float ShippingFee { get; set; }

        /// <summary>
        /// 是否支持营业时间范围外预下单【0-不支持,1 表示支持】
        /// </summary>
        public int PreBook { get; set; }

        /// <summary>
        /// 是否支持营业时间内预下单【0-不支持,1 表示支持】
        /// </summary>
        public int TimeSelect { get; set; }

        /// <summary>
        /// 是否自动接单:0-手动,1-自动
        /// </summary>
        public int IsAutoConfirm { get; set; }

		/// <summary>
		/// 有效标记
		/// </summary>
		public  int EnabledFlag { set; get; }

		/// <summary>
		/// 删除标记
		/// </summary>
		public  int DeleteFlag { set; get; }

		/// <summary>
		/// 备注
		/// </summary>
		public string Description { set; get; }

		/// <summary>
		/// 创建人ID
		/// </summary>
		public string CreateUserId { set; get; }

		/// <summary>
		/// 创建时间
		/// </summary>
		public DateTime? CreateDate { set; get; }

		/// <summary>
		/// 更新人ID
		/// </summary>
		public string ModifyUserId { set; get; }

		/// <summary>
		/// 更新时间
		/// </summary>
		public DateTime? ModifyDate { set; get; }
	}
}
